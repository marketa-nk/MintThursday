<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/recipe_image_view"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/recipe_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0"
        tools:src="@drawable/food"
        />

    <TextView
        android:id="@+id/recipe_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        app:layout_constraintLeft_toRightOf="@id/recipe_image_view"
        app:layout_constraintTop_toTopOf="@id/recipe_image_view"
        app:layout_constraintBottom_toBottomOf="@id/recipe_image_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedWidth="true"
        tools:text="Рецепт" />


</androidx.constraintlayout.widget.ConstraintLayout>
